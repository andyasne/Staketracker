<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.XamarinForms.Input"
xmlns:telerikPrimitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Staketracker.UI.Pages.LoginPage"
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:viewModels="clr-namespace:Staketracker.Core.ViewModels.Login;assembly=Staketracker.Core"
             x:TypeArguments="viewModels:LoginViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Margin="10,0">
            <Label Text="Staketracker"
                   Style="{StaticResource TitleLabelStyle}" />

      
            <telerikInput:RadEntry x:Name="entry"/>
      <telerikInput:RadEntry Text="test"
                                   WatermarkText="Username"
                                   Style="{StaticResource LoginEntryStyle}" />

            <telerikInput:RadEntry  
                                   IsPassword="True"
                                   WatermarkText="Password"
                                   Style="{StaticResource LoginEntryStyle}" />
            

            <telerikInput:RadButton Text="LOGIN"
                                     Style="{StaticResource ActionButtonStyle}" />

            <telerikInput:RadButton Text="Forgot Your Password?"
                                     Style="{StaticResource SecondaryActionButtonStyle}"
                                    FontAttributes="None" />

            <telerikInput:RadButton Text="Use PIN Instead"
                                     Style="{StaticResource SecondaryActionButtonStyle}"
                                    FontAttributes="None" />
        </StackLayout>

        <!-- Optional Features -->
        <StackLayout VerticalOptions="Start"
                     Grid.Row="1">


        </StackLayout>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Text="Don't have an account?"
                   Style="{StaticResource NormalLabelStyle}" />

            <telerikInput:RadButton Text="Create an account"
                                     Style="{StaticResource SecondaryActionButtonStyle}"
                                    Grid.Column="1" />
        </Grid>
    </Grid>
</views:MvxContentPage>